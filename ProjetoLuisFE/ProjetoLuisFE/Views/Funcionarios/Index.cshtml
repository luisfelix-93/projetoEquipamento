@model IEnumerable<ProjetoLuisFE.Models.Funcionarios>

@{
    ViewBag.Title = "Funcionários";
}

<h2>Página do Funcionário</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Setor)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Usuario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Setor)
    </td>
    
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.FuncionarioId }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.FuncionarioId }) |
        @Html.ActionLink("Deletar", "Delete", new { id = item.FuncionarioId })
    </td>
</tr>
}

</table>
