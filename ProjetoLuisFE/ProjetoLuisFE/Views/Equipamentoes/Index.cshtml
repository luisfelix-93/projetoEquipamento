@model IEnumerable<ProjetoLuisFE.Models.Equipamento>

@{
    ViewBag.Title = "Cadastro de Equipamento";
}

<h2>Cadastro de Equipamento</h2>

<p>
    @Html.ActionLink("Cadastrar Equipamento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Equipamento")
        </th>
        <th>
            @Html.Label("Serie")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EquipamentoNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Serie)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EquipamentoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.EquipamentoId }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.EquipamentoId })
        </td>
    </tr>
}

</table>
